#!/usr/bin/env bash

description()
{
  log "Extension for managing Backups (http://extensions.beginrescueend.com/backups/)."
}

actions()
{
  log "
  install  - Install the backup gem.
  setup    - Setup Nginx configuration.
  start    - Startup backup.
  stop     - Stop backup.
  restart  - Restart backup.
  enable   - Enable servers.
  disable  - Disable servers.
  server   - Add new server(s) --enable.
  help     - Display this help text.
  "
}

usage()
{
  log "

Description

  BDSM $(description)

Usage

  bdsm backup [action]

Actions
  $(actions)
"
}

command="usage" # Default
while [[ $# -gt 0 ]] ; do
  token="$1" ; shift
  case "$token" in
    description) command="description" ;;
    actions)     command="actions"     ;;
    *)           command="usage"       ;;
  esac
done

$command

exit $?
