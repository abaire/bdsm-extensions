#!/usr/bin/env bash


# Enable a project (project)
# This renames /etc/nginx/projects/X.conf.disabled to X.conf

project="${1:-}"
[[ -n "$project" ]] || \
  fail "project must be specified for 'nginx project'"

if file_exists "$nginx_projects_path/$project.conf.disbled" ; then
  rename \
    "$nginx_projects_path/$project.conf.disbled" \
    to "$nginx_projects_path/$project.conf"
else
  [[ -f "$nginx_projects_path/$project.conf" ]] &&
    succeed "$project.conf is already enabled."

  fail "Cannot disable, $project.conf, $project.conf.disabled does not exist."
fi
