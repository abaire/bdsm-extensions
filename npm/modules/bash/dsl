#!/usr/bin/env bash

npm_extract()
{
  package_extract

  move_directory "package" to "${package_dir}"
}

npm_install()
{
  (
  export PATH="${prefix_path}/node/active/bin:/bin:/usr/bin:/usr/local/bin"
  make install
  )
}

latest_version()
{
  json="$(curl http://registry.npmjs.org/npm/latest)"
  version="${json##*version\":\"}"
  version="${version%%\"*}"

  printf "%s" "${version}"
}
