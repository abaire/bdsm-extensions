#!/usr/bin/env bash

description()
{
  log "Extension for managing redis (http://wiki.redis.org/Main)."
}

actions()
{
  log "
  install  - Install redis on the system.
  setup    - Setup redis configuration.
  start    - Startup redis.
  stop     - Stop redis.
  restart  - Restart redis.
  info     - Display redis server INFO
  help     - Display this help text.
  "
}

usage()
{
  log "
Description

  BDSM $(description)

Usage

  bdsm redis [action]

Actions
  $(actions)
"
}

command="usage" # Default
while [[ $# -gt 0 ]] ; do
  token="$1" ; shift
  case "$token" in
    description) command="description" ;;
    actions)     command="actions"     ;;
    *)           command="usage"       ;;
  esac
done

$command

exit $?
