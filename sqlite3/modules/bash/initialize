#!/usr/bin/env bash

modules package

# TODO: Make version configurable from ~/.bdsm/${extension}/config

define_package \
  name "sqlite" \
  version "3070500" \
  base_url "http://www.sqlite.org"

# We specify the package_file/url here since it is different than the
# standard name-version.tar.gz
define_package \
  file "${package_name}-autoconf-${package_version}.${archive_format}"

