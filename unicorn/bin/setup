#!/usr/bin/env bash

if [[ -s "$extensions_path/unicorn/templates/unicorn.rb" ]] ; then
  ensure_paths_exist "$shared_path/config/"

  cp "$extensions_path/unicorn/templates/unicorn.rb" \
     "$shared_path/config/unicorn.rb"

  succeed "Setup complete."
else
  fail "$extensions_path/unicorn/templates/unicorn.rb template is missing."
fi
